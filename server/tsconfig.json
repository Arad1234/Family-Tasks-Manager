{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"outDir": "build",
		"rootDir": "./",
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"exclude": ["./node_modules"]
}
